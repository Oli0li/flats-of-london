<div class="row summary-row">
  <div class="col-12 mb-3">
    <h4>From <%= "#{booking.formatted_date(:start_date)} to #{booking.formatted_date(:end_date)}" %></h4>
  </div>
  <div class="col-lg-6 col-sm-12">
    <div class="dashboard-image">
      <img src="<%= cl_image_path booking.flat.photos.first.key %>" />
    </div>
  </div>
  <div class="col-lg-6 col-sm-12">
    <h5><%= booking.flat.name %></h5>
    <p><%= booking.flat.description %></p>
    <p>Booked for <%= "#{booking.number_of_guests} #{'guest'.pluralize(booking.number_of_guests)}" %></p>
    <p>Total paid: <%= humanized_money_with_symbol(booking.amount) %></p>
    <div class="action-buttons">
      <button class="button blue-btn"><i class="fa-regular fa-envelope"></i>Contact the host</button>
      <%= link_to '<i class="fa-regular fa-eye"></i> See flat details'.html_safe, flat_path(booking.flat), class: "button blue-btn" %>
      <button class="button blue-btn <%= booking.future? ? '' : 'd-none' %>"><i class="fa-regular fa-pen-to-square"></i>Edit this booking</button>
      <%= link_to '<i class="fa-solid fa-user-pen"></i>Leave a review'.html_safe, flat_path(booking.flat), class: "button blue-btn" if booking.past? %>
    </div>
  </div>
</div>
