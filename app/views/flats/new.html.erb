<div class="container white-container">
  <h1>Rent your property</h1>

  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name %>
    <div data-controller="address-autocomplete", data-address-autocomplete-api-key-value="<%= ENV["MAPBOX_API_KEY"] %>">
      <%= f.input :address, input_html: { autocomplete: "address-line1" } %>
    </div>
    <%= f.input :description %>
    <%= f.input :price_per_night  %>
    <%= f.input :capacity, as: :numeric, input_html: { min: 1 } %>
    <%= f.input :photos, as: :file, input_html: { multiple: true }  %>
    <%= f.submit %>
  <% end %>

  <%= link_to "Back to all flats", flats_path, class: "btn btn-primary mt-3" %>
</div>

<%= render "shared/footer", content_for(:color) { 'footer-purple' } %>
